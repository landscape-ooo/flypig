{template header}

<div id="bd" class="bd clearfix">
	<h1 id="msg-title">
		<span class="icon icon-envelope"></span>
		消息中心
	</h1>
	<div class="bd-left">
		
		<div class="com-box">
			<div id="msg-menu">
				{template msg_menu}
			</div>
			<div id="msg-body">
				
				<div class="newmsg">
					<ul>
						{loop $arrMsg $key $item}
						<li>{if $item['userid']}<img src="{$item['user']['face']}" width="16" align="absmiddle" /> {$item['user']['username']}：{$item['content']} <a href="{tsUrl('message','user',array('touserid'=>$item['userid']))}">[回复]</a>{else}系统消息：<a href="{tsUrl('message','system')}">[查看]</a>{/if}</li>
						{/loop}
					</ul>
				</div>
				
			</div>
		</div>
		
	</div>
	<div class="bd-right">
		
		{template msg_right}
		
	</div>
</div>

{template footer}