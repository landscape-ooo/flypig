{php echo '<?xml version="1.0" encoding="UTF-8"?>'}
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:dc="http://purl.org/dc/elements/1.1/">
<channel>
  <title>{$strBook[bookname]}</title>
  <link>{$TS_SITE[base][site_url]}{tsUrl('book','show',array('id'=>$strBook[bookid]))}</link>
  <description><![CDATA[{$TS_SITE[base][site_title]} {$strBook[bookdesc]}]]></description>
  <language>zh_cn</language>
  <copyright>&amp;amp;copy; {$TS_CF[info][year]}, {$TS_CF[info][copyright]}.</copyright>
  <pubDate>{php echo date('Y-m-d H:i:s',$pubdate)}</pubDate>
	{loop $arrReview $key $item}
    <item>
        <title>{$item[title]}</title>
        <link>{tsUrl('book','review',array('id'=>$item[reviewid]))}</link>
        <description><![CDATA[{$item[content]}]]></description>
        <content:encoded><![CDATA[{$item[content]}]]></content:encoded>
        <dc:creator>{$item[username]}</dc:creator>
        <pubDate>{php echo date('Y-m-d H:i:s',$item[addtime])}</pubDate>
        <guid isPermaLink="true">{tsUrl('book','review',array('id'=>$item[reviewid]))}</guid>
   </item>
	{/loop}
    </channel>
</rss>