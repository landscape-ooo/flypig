{template header}

<div id="bd" class="bd clearfix">
	<h1 id="user-title">
		<span class="icon-user2"></span>
		忘记密码
	</h1>
	<div class="bd-left">
		
		<div id="login-form">
			<form method="POST" action="{SITE_URL}index.php?app=user&ac=forgetpwd&ts=do">
			<table class="com-table">
				<tr>
					<th>Email：</th>
					<td><input class="uinput" type="text" name="email" /></td>
				</tr>
				<tr>
					<th></th>
					<td>
						<input type="hidden" name="token" value="{$_SESSION['token']}" />
						<button class="btn btn-success" type="submit">提交</button>
						<a href="{SITE_URL}">返回</a>
					</td>
				</tr>
			</table>
			</form>
		</div>
		
	</div>
	<div class="bd-right">
		
		<div id="passport">
			{php doAction('user_login_footer')}
		</div>
		
	</div>
</div>

{template footer}