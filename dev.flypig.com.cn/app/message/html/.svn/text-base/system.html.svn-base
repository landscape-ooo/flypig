{template header}

<div id="bd" class="bd clearfix">
	<h1 id="msg-title">
		<span class="icon icon-envelope"></span>
		消息中心
	</h1>
	<div class="bd-left">
		
		<div class="com-box">
			<div id="msg-menu">
				{template msg_menu}
			</div>
			<div id="msg-body">
				
				<div class="system">
					<ul>
						{loop $arrMessage $key $item}
						<li>
							<span style="color:#42b475;">{$item[user][username]} {php echo date('H:i:s',$item[addtime])}</span>
							<br>{$item[content]}
						</li>
						{/loop}
					</ul>
				</div>
				
			</div>
		</div>
		
	</div>
	<div class="bd-right">
		
		{template msg_right}
		
	</div>
</div>

{template footer}