{template header}

<div id="bd" class="bd clearfix">
	<h1 id="user-title">
		<span class="icon icon-cog"></span>
		用户设置
	</h1>
	<div class="bd-left">
		
		<div class="com-box">
			<div id="set-menu">
				{template set_menu}
			</div>
			<div id="set-body">
				
				<form method="post" action="{SITE_URL}index.php?app=user&ac=do&ts=setemail">
				<table class="com-table">
					<tr>
						<th>当前Email帐号：</th>
						<td>{$strUser['email']}</td>
					</tr>
					<tr>
						<th>新Email帐号：</th>
						<td><input class="uinput" name="email" type="email" style="width:300px;" /></td>
					</tr>
					<tr>
						<th></th>
						<td>
							<input type="hidden" name="token" value="{$_SESSION['token']}" />
							<button class="btn btn-success" type="submit">修改</button>
							（提示：修改登陆帐号将需要重新验证Email）
						</td>
					</tr>
				</table>
				</form>
				
			</div>
		</div>
		
	</div>
	<div class="bd-right">
		
		{template set_right}
		
	</div>
</div>

{template footer}